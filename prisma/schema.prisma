generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String?  
  image     String?  
  scores    Score[]
  createdAt DateTime @default(now())
}

model Maze {
  id         String   @id @default(cuid())
  layout     Json    
  difficulty String
  createdAt  DateTime @default(now())
  scores     Score[]
}

model Score {
  id        String   @id @default(cuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  mazeId    String?
  maze      Maze?    @relation(fields: [mazeId], references: [id])

  mazeSize  Int     
  timeTaken Float   
  score     Int      
  createdAt DateTime @default(now())
}
